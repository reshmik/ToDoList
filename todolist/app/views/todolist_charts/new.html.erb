<h1>New todolist_chart</h1>

<% form_for(@todolist_chart) do |f| %>
  <%= f.error_messages %>

  <p style="font-size: 10pt; color: blue">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p style="font-size: 10pt; color: blue">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p style="font-size: 10pt; color: blue">
    <%= f.label :duedate %><br />
    <%= f.date_select :duedate %>
  </p>
  <p style="font-size: 10pt; color: blue">
    <%= f.label :status %><br />
    <%= f.text_field :status %>
  </p>
  <p style="font-size: 10pt; color: blue">
    <%= f.label :priority %><br />
    <%= f.text_field :priority %>
  </p>
  <p style="font-size: 10pt; color: blue">
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', todolist_charts_path %>